<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.one.browser"
    android:installLocation="auto">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 查看网络连接 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 查看WLAN连接 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 拥有完全的网络访问权限 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" /> <!-- 修改或删除您共享存储空间中的内容 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 防止手机休眠 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" /> <!-- 请求安装文件包 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- 运行前台服务 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- 显示通知 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 录音 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" /> <!-- 更改您的音频设置 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" /> <!-- 安装快捷方式 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:isolatedProcess="true"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.White"
        android:useEmbeddedDex="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:exported="true"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- 要响应隐式Intent必须提供此类别 -->
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- 通过scheme提供开启自己应用的入口 -->
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <!-- 要响应隐式Intent必须提供此类别 -->
                <category android:name="android.intent.category.DEFAULT" />
                <!-- 浏览器打开此应用 -->
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="about" />
                <data android:scheme="javascript" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="inline" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="text/html" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/xhtml+xml" />
                <data android:mimeType="application/vnd.wap.xhtml+xml" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.WEB_SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SysCommonActivity"
            android:exported="false"
            android:label="通用页面"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".more.BookmarkActivity"
            android:exported="false"
            android:label="书签页面"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".more.HistoryActivity"
            android:label="历史页面"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".more.DownloadActivity"
            android:label="下载页面"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".more.ScriptActivity"
            android:label="脚本页面"
            android:theme="@style/BaseTheme" />
        <activity
            android:name=".more.SettingActivity"
            android:label="软件设置"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysFanActivity"
            android:exported="false"
            android:label="翻译页面"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysChineseActivity"
            android:exported="false"
            android:label="汉字词典"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysPhotoActivity"
            android:exported="false"
            android:label="证件照功能"
            android:theme="@style/Theme.one.NoActionBarFunction" />
        <activity
            android:name=".activity.SysSelectActivity"
            android:exported="false"
            android:label="图片选择页面"
            android:theme="@style/Theme.one.NoActionBarFunction"
            />
        <activity
            android:name=".activity.SysApplyActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true"
            android:label="渲染图片"
            android:theme="@style/Theme.one.NoActionBarFunction"/>

        <activity
            android:name=".activity.SysClockActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true"
            android:label="时间屏幕"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysTPAsActivity"
            android:exported="false"
            android:label="图片取色"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysIdiomActivity"
            android:exported="false"
            android:label="成语查询"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysEwmActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:exported="false"
            android:label="二维码生成"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysBase64Activity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:label="Base64编码"
            android:theme="@style/MaterialButtonTheme" />
        <activity
            android:name=".activity.SysTphbActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true"
            android:label="图片转黑白"
            android:requestLegacyExternalStorage="true"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysImageColourActivity"
            android:exported="false"
            android:label="图片上色"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysTpsyActivity"
            android:exported="false"
            android:label="图片水印"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysCompassActivity"
            android:exported="false"
            android:label="指南针"
            android:theme="@style/Theme.one.NoActionBar" />
        <activity
            android:name=".activity.SysRollLedActivity"
            android:exported="false"
            android:label="滚动字幕制作"
            android:theme="@style/Theme.one.NoActionBar" />

        <activity
            android:name=".activity.SysLedActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true"
            android:label="滚动字幕显示"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.one.NoActionBar" />

        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.one.browser"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".MainActivity$CustomButtonReceiver"
            android:exported="false" />
    </application>

</manifest>