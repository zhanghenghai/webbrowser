<resources xmlns:tools="http://schemas.android.com/tools">
    <!--黑色主题-->
    <style name="AppTheme.Black" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 隐藏标题栏和设置状态栏透明 -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--状态栏文字颜色为黑色-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--导航栏颜色为黑色-->
        <item name="android:navigationBarColor">@android:color/black</item>
        <!--背景颜色-->
        <item name="appBackgroundColor">@color/blackColorBackground</item>
        <item name="appBackgroundColorDark">@color/blackColorBackgroundDark</item>
        <item name="appBackgroundColorReverse">@color/blackColorBackgroundReverse</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="appTextColor">@color/blackColorText</item>
        <!--图标-->
        <item name="ic_list_unordered">@drawable/ic_list_unordered_black</item>
        <item name="ic_restart_line">@drawable/ic_restart_line_white</item>
        <item name="ic_more_2_fill">@drawable/ic_more_2_fill_white</item>
        <item name="ic_chevron_left">@drawable/ic_chevron_left_while</item>
        <item name="ic_home_alt2">@drawable/ic_home_alt2_white</item>
        <item name="ic_menu_line">@drawable/ic_menu_line_white</item>
        <item name="ic_chevron_right">@drawable/ic_chevron_right_white</item>

    </style>

    <!--白色主题-->
    <style name="AppTheme.White" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 隐藏标题栏和设置状态栏透明 -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--状态栏文字颜色为黑色-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--导航栏颜色为黑色-->
        <item name="android:navigationBarColor">@android:color/white</item>
        <!--背景颜色-->
        <item name="appBackgroundColor">@color/whiteColorBackground</item>
        <item name="appBackgroundColorDark">@color/whiteColorBackgroundDark</item>
        <item name="appBackgroundColorReverse">@color/whiteColorBackgroundReverse</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="appTextColor">@color/black</item>
        <!--图标-->
        <item name="ic_list_unordered">@drawable/ic_list_unordered_white</item>
        <item name="ic_restart_line">@drawable/ic_restart_line_black</item>
        <item name="ic_more_2_fill">@drawable/ic_more_2_fill_black</item>
        <item name="ic_chevron_left">@drawable/ic_chevron_left_black</item>
        <item name="ic_home_alt2">@drawable/ic_home_alt2_black</item>
        <item name="ic_menu_line">@drawable/ic_menu_line_black</item>
        <item name="ic_chevron_right">@drawable/ic_chevron_right_black</item>
    </style>

    <style name="Theme.one.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.one.PopupOverlay" parent="Widget.AppCompat.PopupMenu.Overflow" />

    <style name="Theme.kt" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BaseTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--状态栏文字颜色-->
        <item name="android:windowLightStatusBar">true</item>
        <!--状态栏颜色为透明色-->
        <item name="android:statusBarColor">@color/Transparent</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <!--  material主题  -->
    <style name="ShapeAppearance.one" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Dialog.Alert.one" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="dialogCornerRadius">12dp</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorPrimary">@color/zts</item>
        <item name="colorOnPrimary">@color/zts</item>
        <item name="colorAccent">@color/fabColor</item>
        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.one</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.one</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.one</item>
    </style>

    <style name="Theme.one" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zts</item>
        <item name="colorPrimaryVariant">@color/zts</item>
        <item name="colorOnPrimary">@color/zts</item>
        <item name="colorAccent">@color/fabColor</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="colorControlNormal">@color/rippleColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.one</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.one</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.one</item>
        <item name="alertDialogTheme">@style/Dialog.Alert.one</item>
    </style>

    <!--  主程序主题  -->
    <style name="Theme.one.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--  侧栏功能主题  -->
    <style name="Theme.one.NoActionBarFunction">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--状态栏颜色为透明色-->
        <item name="android:statusBarColor">@color/Transparent</item>
        <!--状态栏文字颜色-->
        <item name="android:windowLightStatusBar">true</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="TabItemApplyText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

</resources>